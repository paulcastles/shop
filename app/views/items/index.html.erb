<h1>Listing items</h1>

<head>
  <title>Search</title>
</head>
<body>
<%= form_tag(items_path, :method => "get", :class => "navbar-form", :id => "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search_manufacturer, params[:search_manufacturer], :class => "span2", :placeholder => "Search Manufacturer" %>
    </div>
    <div class="input-append">
      <%= text_field_tag :search_category, params[:search_category], :class => "span2", :placeholder => "Search Category" %>

      <input type="submit" id="search" value="Search"/>
    </div>
<% end %>

<%= yield %>
</body>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Price</th>
      <th>Category</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.price %></td>
        <td><%= item.category %></td>
        <td><%= item.picture %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Add To Cart', line_items_path(item_id: item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
